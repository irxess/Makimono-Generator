{% extends 'base.html.jinja' %}
{% block title %}All Recipes{% endblock %}
{% block meta_description %}All recipes{% endblock %}

{% block content %}
  <table id="all_recipes_table">
    <tr>
      <th>Recipe</th><th>Created on</th><th>Updated on</th>
    </tr>
    {% for thumbnail in thumbnails %}
      <tr>
        <td>
          <a href="{{path_to_base}}/{{ thumbnail.url }}">{{ thumbnail.name }}</a>
        </td>
        <td>
          {% if (thumbnail.created is defined) and thumbnail.created %}
          {{ thumbnail.created }}
          {% endif %}
        </td>
        <td>
          {% if (thumbnail.updated is defined) and thumbnail.updated %}
          {{ thumbnail.updated }}
          {% endif %}
        </td>
      </tr>
    {% endfor %}
  </table>
{% endblock %}
